@model List<pos_system.Models.UserViewModel>

<style>
    .table thead th {
        background-color: #f9fafc;
        color: #4a4a4a;
        font-weight: 600;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn-custom {
        border-radius: 8px;
        padding: 6px 10px;
        font-size: 0.875rem;
    }

    .btn-add {
        background-color: #d3f0ff;
        color: #000;
        border: 1px solid #c2e4f3;
    }

    .btn-edit {
        background-color: #fff5cc;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    .btn-delete {
        background-color: #ffe5e5;
        color: #a10000;
        border: 1px solid #ffcccc;
    }
</style>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold" style="color: #333;">User Management</h2>
        <a class="btn btn-add btn-custom" asp-action="Register">
            <i class="bi bi-person-plus me-1"></i> Add User
        </a>
    </div>

    <div class="card border-0">
        <div class="card-body border-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-center">
                            <th>Username / Email</th>
                            <th>Role</th>
                            <th style="width: 180px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td class="text-center">@user.Role</td>
                                    <td class="text-center">
                                        <a class="btn btn-edit btn-custom me-2" asp-action="Edit" asp-route-id="@user.Id">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a class="btn btn-delete btn-custom" asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    <i class="bi bi-info-circle"></i> No users found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
