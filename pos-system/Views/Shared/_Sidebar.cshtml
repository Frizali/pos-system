<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Fahrizal Ali</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="d-flex flex-column justify-content-between h-100">
            <div class="sidebar-menu d-flex flex-column gap-3">
                <a asp-controller="Dashboard" asp-action="Index" class="text-decoration-none text-black">
                    <i class="bi bi-house me-3"></i>
                    <span>Dashboard</span>
                </a>
                <a asp-controller="Product" asp-action="ProductList" asp-route-category="All" class="text-decoration-none text-black">
                    <i class="bi bi-bag me-3"></i>
                    <span>Point of Sales</span>
                </a>
                <a asp-controller="PreOrder" asp-action="Index" class="text-decoration-none text-black">
                    <i class="bi bi-file-earmark-text me-3"></i>
                    <span>Pre-Order</span>
                </a>
                <a asp-controller="Activity" asp-action="Order" class="text-decoration-none text-black">
                    <i class="bi bi-activity me-3"></i>
                    <span>Activity</span>
                </a>
                <a asp-controller="Inventory" asp-action="Index" class="text-decoration-none text-black">
                    <i class="bi bi-box-seam me-3"></i>
                    <span>Inventory</span>
                </a>
                @if(User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a asp-controller="Auth" asp-action="Index" class="text-decoration-none text-black">
                        <i class="bi bi-people me-3"></i>
                        <span>Teams</span>
                    </a>                    
                    <a asp-controller="Product" asp-action="Index" class="text-decoration-none text-black">
                        <i class="bi bi-bag-plus me-3"></i>
                        <span>Product</span>
                    </a>
                    <a asp-controller="Setup" asp-action="Index" class="text-decoration-none text-black">
                        <i class="bi bi-gear me-3"></i>
                        <span>Setup</span>
                    </a>
                }
            </div>
            <div>
                <a asp-controller="Auth" asp-action="Logout" class="text-decoration-none text-black">
                    <i class="bi bi-box-arrow-right me-3"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </div>
</div>