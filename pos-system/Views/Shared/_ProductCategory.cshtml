@model List<TblProductCategory>



<div id="scrollable" style="overflow-x: auto;cursor: grab;scrollbar-width: none;user-select: none;display: flex;flex-wrap: nowrap;" class="mb-3">
    @foreach(var category in Model.OrderByDescending(x => x.TblProducts.Count()))
    {
        <button type="submit" name="category" value="@category.CategoryName" class="p-0 border-0">
            <div class="card me-2" style="width: 200px; flex: 0 0 auto;">
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title d-inline-block">@category.CategoryName</h6>
                    <p class="m-0 d-inline-block text-muted">
                        @{
                            var total = category.TblProducts.Count();
                        }@total Items
                    </p>
                </div>
            </div>
        </button>
    }
</div>
