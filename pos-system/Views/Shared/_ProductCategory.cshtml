@model List<ProductCategoryDTO>

<div id="scrollable" style="overflow-x: auto;cursor: grab;scrollbar-width: none;user-select: none;display: flex;flex-wrap: nowrap;" class="mb-3 bg-light">
    @foreach(var category in Model.OrderByDescending(c =>  c.TotalProducts).ThenBy(c => c.CategoryName))
    {
        <button type="submit" name="category" value="@category.CategoryId" class="p-0 border-0 category-btn" style="background-color:transparent">
            <div class="card me-3 border-0 card-category" style="width: 150px; flex: 0 0 auto;">
                <div class="card-body d-flex flex-column text-start card-wrapper">
                    <div class="rounded-circle circle-wrapper mb-3 bg-light">
                        <i class="bi bi-bag text-dark text-muted icon-category" style="font-size:1.2rem"></i>
                    </div>
                    <h6 class="card-title d-inline-block mb-0">@category.CategoryName</h6>
                    <p class="m-0 d-inline-block text-muted">
                        @{
                            var total = category.TotalProducts;
                        }@total Items
                    </p>
                </div>
            </div>
        </button>
    }
</div>
