@model List<POModel>

@{
    ViewBag.Title = "PO Order Table";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container py-4">
    <!-- Tombol Kembali -->
    <a href="javascript:history.back()" class="btn btn-secondary mb-3">
        Back
    </a>

    <h4 class="mb-4">Daftar PO Order</h4>
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>Nama</th>
                <th>Tanggal PO</th>
                <th>Detail Orderan</th>
                <th>Note</th>
                <th>Total Harga</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var order = Model[i];
                <tr>
                    <td>@order.Name</td>
                    <td>@order.TanggalPO.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#detailModal@i">
                            Lihat Detail
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="detailModal@i" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Detail Order - @order.Name</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Produk</th>
                                                    <th>Variant</th>
                                                    <th>Note</th>
                                                    <th>Jumlah</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in order.Detail)
                                                {
                                                    <tr>
                                                        <td>@item.Produk</td>
                                                        <td>@item.Variant</td>
                                                        <td>@item.Note</td>
                                                        <td>@item.Qty</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>@order.Note</td>
                    <td>Rp @order.Total.ToString("N0")</td>
                    <td>
                        <span class="badge bg-@(order.Status == "Selesai" ? "success" : "warning")">
                            @order.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
