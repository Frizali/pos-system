@model ManageAccFormModel

@{
    ViewData["Title"] = "Manage Account";
}

<link rel="stylesheet" href="~/css/Product/index.css" asp-append-version="true" />

<div class="container d-flex justify-content-center align-items-center">
    <div class="card border-0 w-100">
        <div class="card-body">
            <h5 class="card-title">Manage Account</h5>
            <hr />
            <form asp-action="UpdateAccount" method="post">
                <div class="mb-2">
                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control" id="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="CurrentPassword">Current Password</label>
                    <input type="password" asp-for="CurrentPassword" class="form-control" id="current-password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="NewPassword">New Password</label>
                    <input type="password" asp-for="NewPassword" class="form-control" id="new-password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="ConfirmPassword">Confirm New Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirm-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Update Account</button>
                </div>
            </form>
        </div>
    </div>
</div>
