@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "User";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="~/css/User/Index.css" asp-append-version="true" />

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="~/images/Logo omahmu HD.png" alt="Logo" width="50" class="me-2" />
            <strong>Angkringan Omahmu</strong>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-items-center">
                <li class="nav-item"><a class="nav-link active" href="#home">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#menu">Menu</a></li>
                <li class="nav-item"><a class="nav-link" href="#service">Service</a></li>
                <li class="nav-item"><a class="nav-link" href="#review">Review</a></li>
            </ul>

            @if (String.IsNullOrEmpty(@User.Identity?.Name))
            {
                <a href="Auth/Login" class="btn btn-orange ms-3">Login</a>
            }
            else
            {
                <p class="fw-bold mb-0 ms-3">@User.Identity?.Name</p>
            }

            <div class="dropdown ms-3">
                <button class="btn btn-light border-0 dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-4"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" asp-controller="User" asp-action="ManageAcc">Setting</a></li>
                    <li><a class="dropdown-item" asp-controller="PreOrder" asp-action="UserOrder">Order</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<section id="home" class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <h1 class="display-5 fw-bold">Selamat Datang di Angkringan Omahmu</h1>
                <h6 class="lead">
                    Tempat nongkrong asik khas Jawa dengan berbagai pilihan menu lezat dan harga bersahabat.
                    Cocok untuk kumpul santai bareng teman atau menikmati malam dengan suasana hangat dan tradisional.
                </h6>
                <a asp-controller="Po" asp-action="OrderPo" class="btn text-white mt-3" style="background-color: orange;">Lihat Menu</a>
            </div>

            <div class="col-md-6">
                <div id="foodCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded shadow">
                        <div class="carousel-item active">
                            <img src="~/images/foto 1.PNG" class="d-block w-100" alt="Makanan 1">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/foto 2.PNG" class="d-block w-100" alt="Makanan 2">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/foto 3.PNG" class="d-block w-100" alt="Makanan 3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#foodCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#foodCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="menu" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Menu Favorit</h2>
        <div class="row g-4">
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/nasi kucing.jpg" class="card-img-top menu-img" alt="Nasi Kucing">
                    <div class="card-body">
                        <h5 class="card-title">Nasi Kucing</h5>
                        <p class="card-text">Nasi porsi kecil dengan sambal, lauk, dan aroma khas angkringan.</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/sate usus.jpeg" class="card-img-top menu-img" alt="Sate Usus">
                    <div class="card-body">
                        <h5 class="card-title">Sate Usus</h5>
                        <p class="card-text">Sate usus ayam gurih dan kenyal, cocok jadi teman makan atau camilan.</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/images/teh.jpg" class="card-img-top menu-img" alt="Teh Panas">
                    <div class="card-body">
                        <h5 class="card-title">Teh Panas</h5>
                        <p class="card-text">Teh manis hangat khas angkringan, pas diminum malam hari.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Po" asp-action="OrderPo" class="btn btn-orange">Lihat Semua Menu / Pesan Sekarang</a>
        </div>
    </div>
</section>

<section id="service" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Layanan Kami</h2>
        <div class="row g-4">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="bg-white shadow rounded text-center p-4 h-100 d-flex flex-column align-items-center">
                    <i class="bi bi-shop-window fs-1 text-warning mb-3"></i>
                    <h5 class="fw-bold">Makan di Tempat</h5>
                    <p class="flex-grow-1">Rasakan langsung suasana angkringan khas Jawa yang hangat dan bersahabat.</p>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="bg-white shadow rounded text-center p-4 h-100 d-flex flex-column align-items-center">
                    <i class="bi bi-cash-coin fs-1 text-success mb-3"></i>
                    <h5 class="fw-bold">Harga Terjangkau</h5>
                    <p class="flex-grow-1">Nikmati berbagai menu khas angkringan dengan harga bersahabat.</p>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="bg-white shadow rounded text-center p-4 h-100 d-flex flex-column align-items-center">
                    <i class="bi bi-calendar-event fs-1 text-danger mb-3"></i>
                    <h5 class="fw-bold">Reservasi Tempat</h5>
                    <p class="flex-grow-1">Pesan tempat atau meja terlebih dahulu agar lebih nyaman.</p>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="bg-white shadow rounded text-center p-4 h-100 d-flex flex-column align-items-center">
                    <i class="bi bi-calendar-check fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold text-warning">Sistem PO</h5>
                    <p class="flex-grow-1">Gunakan sistem PO kami untuk pesanan acara atau banyak!</p>
                    <a asp-controller="Po" asp-action="OrderPo" class="btn btn-warning text-white mt-2">Buat PO Sekarang</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="review" class="py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
