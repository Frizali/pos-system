@model TblProduct

<div class="row">
    <div class="col-md-6">
        @* <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.ProductName"> *@
    </div>
    <div class="col-md-6">
        <h3>@Model.ProductName</h3>
        <p class="text-muted">@Model.Category.CategoryName</p>

        <div class="mb-3">
            @if (Model.TblProductVariants.Any())
            {
                <h5>Variants:</h5>
                <ul class="list-group">
                    @foreach (var variant in Model.TblProductVariants)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@variant.Sku</span>
                            <span>Rp @variant.VariantPrice</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <h4>Rp @Model.Price</h4>
            }
        </div>

        <p>@Model.ProductDescription</p>
    </div>
</div>