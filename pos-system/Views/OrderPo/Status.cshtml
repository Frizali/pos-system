@model List<POModel>

@{
    ViewBag.Title = "PO Order Table";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container py-4">
    <a href="javascript:history.back()" class="btn btn-secondary mb-3">Back</a>

    <h4 class="mb-4">Daftar PO Order</h4>

    <!-- Filter Tanggal, Status dan Search -->
    <div class="row mb-4">
        <div class="col-md-3 mb-2">
            <label class="form-label">Filter Tanggal PO:</label>
            <input type="date" class="form-control" id="filterDate">
        </div>
        <div class="col-md-3 mb-2">
            <label class="form-label">Filter Status:</label>
            <select class="form-select" id="filterStatus">
                <option value="">All</option>
                <option value="success">Success</option>
                <option value="reject">Reject</option>
            </select>
        </div>
        <div class="col-md-4 mb-2">
            <label class="form-label">Search Nama / Invoice:</label>
            <input type="text" class="form-control" id="searchInput" placeholder="Cari nama atau invoice...">
        </div>
    </div>

    <table class="table table-bordered text-center" id="orderTable">
        <thead class="table-light">
            <tr>
                <th>No Invoice</th>
                <th>Nama</th>
                <th>Tanggal PO</th>
                <th>Detail Orderan</th>
                <th>Note</th>
                <th>Total Harga</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                // Data dummy: 1 success, 1 reject
                var dataDummy = new List<POModel>
            {
            new POModel {
            InvoiceNumber = "INV001",
            Name = "Budi",
            TanggalPO = DateTime.Now,
            Detail = new List<PODetail> {
            new PODetail { Produk = "Nasi Goreng", Variant = "Pedas", Note = "Tanpa acar", Qty = 2 }
            },
            Note = "Catatan 1",
            Total = 30000,
            Status = "success"
            },
            new POModel {
            InvoiceNumber = "INV002",
            Name = "Sari",
            TanggalPO = DateTime.Now,
            Detail = new List<PODetail> {
            new PODetail { Produk = "Mie Ayam", Variant = "Manis", Note = "-", Qty = 1 }
            },
            Note = "Catatan 2",
            Total = 15000,
            Status = "reject"
            }
            };

                foreach (var order in dataDummy)
                {
                    string tanggalPO = order.TanggalPO.ToString("yyyy-MM-dd");
                    <tr data-tanggal="@tanggalPO" data-name="@order.Name.ToLower()" data-invoice="@order.InvoiceNumber.ToLower()" data-status="@order.Status">
                        <td>@order.InvoiceNumber</td>
                        <td>@order.Name</td>
                        <td>@tanggalPO</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#detailModal@order.InvoiceNumber">
                                Lihat Detail
                            </button>

                            <!-- Modal Detail -->
                            <div class="modal fade" id="detailModal@order.InvoiceNumber" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Detail Order - @order.Name</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <table class="table table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Produk</th>
                                                        <th>Variant</th>
                                                        <th>Note</th>
                                                        <th>Jumlah</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in order.Detail)
                                                    {
                                                        <tr>
                                                            <td>@item.Produk</td>
                                                            <td>@item.Variant</td>
                                                            <td>@item.Note</td>
                                                            <td>@item.Qty</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>@order.Note</td>
                        <td>Rp @order.Total.ToString("N0")</td>
                        <td>
                            @if (order.Status == "success")
                            {
                                <span class="badge bg-success">Success</span>
                            }
                            else if (order.Status == "reject")
                            {
                                <span class="badge bg-danger">Reject</span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Filter Script -->
<script>
    const filterDate = document.getElementById("filterDate");
    const searchInput = document.getElementById("searchInput");
    const filterStatus = document.getElementById("filterStatus");

    function filterTable() {
        const selectedDate = filterDate.value;
        const keyword = searchInput.value.toLowerCase();
        const selectedStatus = filterStatus.value;
        const rows = document.querySelectorAll("#orderTable tbody tr");

        rows.forEach(row => {
            const rowDate = row.getAttribute("data-tanggal");
            const name = row.getAttribute("data-name");
            const invoice = row.getAttribute("data-invoice");
            const status = row.getAttribute("data-status");

            const matchesDate = !selectedDate || rowDate === selectedDate;
            const matchesKeyword = !keyword || name.includes(keyword) || invoice.includes(keyword);
            const matchesStatus = !selectedStatus || status === selectedStatus;

            row.style.display = (matchesDate && matchesKeyword && matchesStatus) ? "" : "none";
        });
    }

    filterDate.addEventListener("change", filterTable);
    searchInput.addEventListener("keyup", filterTable);
    filterStatus.addEventListener("change", filterTable);
</script>
